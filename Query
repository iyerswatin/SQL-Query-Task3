SELECT `civicrm_contact`.`first_name` AS `Contact Display Name`, `civicrm_contact`.`organization_name` AS `Employer Organisation Name`, COUNT(`ncase`.`NCaseStatus`) AS `Number of cases` FROM `civicrm_contact`,`ncase` WHERE `civicrm_contact`.`organization_name` IS NOT NULL GROUP By `civicrm_contact`.`first_name`
